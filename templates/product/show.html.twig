{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1 class="p-5">{{ product.name }}</h1>
    <div class="container-md pt-10 row">
        <div class="col-8">
            <img style="width: 100%;" src="{{ asset(product.image) }}" alt="Symfony!"/>
        </div>
        <div class="col-4 " >
            <table class="table">
                <tbody>
                <tr>
                    <th>Description</th>
                    <td>{{ product.description }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>${{ product.price }}</td>
                </tr>
                <tr>
                    <th>Weight</th>
                    <td>{{ product.weight }} Kg</td>
                </tr>
                <tr>
                    <th>Brand</th>
                    <td>{{ product.brandname.name }}</td>
                </tr>
                </tbody>
            </table>
            {% if app.user %}
            <form>
                <input type="number" class="mb-4" name="quantity" min="1" max="1000" step="1"/>
                <br>
                <input type="submit" value="Add" class="btn btn-danger">
            </form>
            {% endif %}
        </div>

    </div>
<div class="text-center" >


