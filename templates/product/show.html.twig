{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}

<div class="container">
    <h1>Product</h1>
    <table class="table">
        <body>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ product.weight }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img width="20%" class="pro-container"   src="{{ asset(product.image) }}"></td>

            </tr>
        </body>
    </table>
    <div class="text-center" >
    <button class="btn btn-primary"  onclick="document.location='http://localhost:8000/product'">Back to list</button>

</div>
</div>
{% endblock %}
