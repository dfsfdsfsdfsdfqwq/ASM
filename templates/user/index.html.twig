{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container">
        <h1>User Management</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>DoB</th>
                <th>Gender</th>
                <th>Phonenumber</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.DoB ? user.DoB|date('Y-m-d') : '' }}</td>
                    <td>{{ user.gender }}</td>
                    <td>{{ user.phonenumber }}</td>
                    <td>
                        <button class="btn btn-primary" >
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" style="color: white" >Show</a>
                        </button>
                        <button class="btn btn-primary" >
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" style="color: white">Edit</a>
                        </button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
