<form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete your account');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-primary"  style="width: 50%; height: 40px; margin-top: 4px;  border-radius: 4px">Delete</button>
</form>
